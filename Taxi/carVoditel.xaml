<Page x:Class="Taxi.carVoditel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Taxi"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="carVoditel">

    <Grid>
        <DataGrid x:Name="aboutCar" AutoGenerateColumns="False" IsReadOnly="True" Grid.Row="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер авто" Binding="{Binding serNum}"/>
                <DataGridTextColumn Header="Марка" Binding="{Binding numStrah}"/>
                <DataGridTextColumn Header="Цвет" Binding="{Binding color}"/>
                <DataGridTextColumn Header="Класс авто" Binding="{Binding class}"/>
                <DataGridTextColumn Header="Год авто" Binding="{Binding year}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
