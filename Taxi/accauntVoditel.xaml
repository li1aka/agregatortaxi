<Page x:Class="Taxi.accauntVoditel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Taxi"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="accauntVoditel">

    <Grid>
        <DataGrid x:Name="acc" AutoGenerateColumns="False" IsReadOnly="True" Grid.Row="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя" Binding="{Binding name}"/>
                <DataGridTextColumn Header="Выполнено заказов" Binding="{Binding ordersWin}"/>
                <DataGridTextColumn Header="Заработано" Binding="{Binding money}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
